<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#eee">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/ll_user_like"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content" 
        	android:orientation="vertical"
        	android:gravity="center_horizontal">
	                
            <ImageView
			    android:contentDescription="@string/icon_user_like"
				android:id="@+id/icon_user_like"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/icon_ilike" />
            
	        <TextView 
	            android:id="@+id/tx_like"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="@color/black"
	            android:text="I like"
	            />
	    </LinearLayout>
		    
        <LinearLayout
            android:id="@+id/ll_user_recipes"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content" 
        	android:gravity="center_horizontal"
        	android:orientation="vertical">
	  
            <ImageView
			    android:contentDescription="@string/icon_recipes"
				android:id="@+id/icon_recipe"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/icon_myrecipe" />
            
	        <TextView 
	            android:id="@+id/tx_recipes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="@color/black"
	            android:text="Recipes"  />
	    </LinearLayout>
	        
        <LinearLayout
            android:id="@+id/ll_user_moments"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content" 
        	android:gravity="center_horizontal"
        	android:orientation="vertical">
	        
	        <ImageView
			    android:contentDescription="@string/icon_moments"
				android:id="@+id/icon_moments"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/icon_moments" />

	       <TextView 
	            android:id="@+id/tx_moments"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="@color/black"
	            android:text="Moments" />
	    </LinearLayout>
		    
	</LinearLayout>   
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <ImageView 
        android:id="@+id/tabline0" 
        android:layout_height="3dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/grey"/>
	    
	    <ImageView 
        android:id="@+id/tabline1" 
        android:layout_height="3dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>
	    
	    <ImageView 
        android:id="@+id/tabline2" 
        android:layout_height="3dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>
	</LinearLayout>
    
</LinearLayout>
